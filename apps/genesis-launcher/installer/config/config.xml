<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>DEMIURGE QOR</Name>
    <Version>1.0.0</Version>
    <Title>DEMIURGE QOR - Gateway to the Blockchain</Title>
    <Publisher>Demiurge Blockchain</Publisher>
    <ProductUrl>https://demiurge.cloud</ProductUrl>
    <StartMenuDir>DEMIURGE</StartMenuDir>
    
    <!-- Installation directory -->
    <TargetDir>@ApplicationsDir@/Demiurge/QOR</TargetDir>
    
    <!-- Uninstaller name -->
    <MaintenanceToolName>DemiurgeQOR-Uninstall</MaintenanceToolName>
    
    <!-- Path settings -->
    <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
    <AllowSpaceInPath>true</AllowSpaceInPath>
    
    <!-- Wizard appearance -->
    <WizardStyle>Modern</WizardStyle>
    <WizardDefaultWidth>900</WizardDefaultWidth>
    <WizardDefaultHeight>700</WizardDefaultHeight>
    
    <!-- Control script for custom pages -->
    <ControlScript>controlscript.qs</ControlScript>
    
    <!-- Control script handles page customization -->
</Installer>
