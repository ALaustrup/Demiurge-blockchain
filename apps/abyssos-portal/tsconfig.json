{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Workspace Aliases - PHASE OMEGA */
    "baseUrl": ".",
    "paths": {
      "@demiurge/dns-service/*": ["../../apps/dns-service/src/*"],
      "@demiurge/ts-sdk/*": ["../../sdk/ts-sdk/src/*"],
      "@demiurge/schema/*": ["../../sdk/schema/*"],
      "@abyssos/core/*": ["./src/core/*"],
      "@abyssos/crypto/*": ["./src/crypto/*"],
      "@abyssos/desktop/*": ["./src/desktop/*"],
      "@abyssos/services/*": ["./src/services/*"],
      "@abyssos/themes/*": ["./src/themes/*"],
      "@abyssos/fractall/*": ["./src/fractall/*"],
      "@abyssos/abyssid/*": ["./src/abyssid/*"],
      "@abyssos/drc369/*": ["./src/drc369/*"],
      "@abyssos/radio/*": ["./src/radio/*"]
    },

    /* Linting */
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

